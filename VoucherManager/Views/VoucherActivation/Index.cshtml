
<div class="container mb-5">  
    <h1 class="text-center mt-5 mb-5">Aktywuj Voucher</h1>  
    <div class="row justify-content-center">  
        <div class="col-md-6">
            <div class="card shadow p-5">
                <form asp-action="ActivateVoucher" method="post">
                    <div class="mb-3">
                        <label for="serialNumber" class="form-label">Numer seryjny vouchera</label>
                        <input type="text" class="form-control" id="serialNumber" name="serialNumber" required>
                    </div>
                    <div class="mb-3">
                        <label for="serialNumber" class="form-label">Adres e-mail</label>
                        <input type="email" class="form-control" id="serialNumber" name="serialNumber" required>
                    </div>
                    <div class="mb-3">
                        <label for="serialNumber" class="form-label">Numer telefonu</label>
                        <input type="text" class="form-control" id="serialNumber" name="serialNumber" required>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Aktywuj Voucher</button>
                    </div>
                </form>
            </div> 
        </div>  
    </div>  
</div>