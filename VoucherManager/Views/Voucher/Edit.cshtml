@model VoucherManager.ViewModels.CreateEditVoucherViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container py-5">
    <h1 class="mb-4">Edytuj Voucher: @Model.SerialNumber</h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 card shadow-sm rounded-3 p-5">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="SerialNumber" />
                <input type="hidden" asp-for="GuestId" />

                <div class="mb-3">
                    <label asp-for="VoucherType" class="form-label"></label>
                    <select asp-for="VoucherType" asp-items="@Model.VoucherTypeList" class="form-select"></select>
                    <span asp-validation-for="VoucherType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Amount" class="form-label"></label>
                    <input type="number" asp-for="Amount" class="form-control" min="0" step="0.01" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SellDate" class="form-label"></label>
                    <input asp-for="SellDate" type="date" class="form-control" />
                    <span asp-validation-for="SellDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ActivationDate" class="form-label"></label>
                    <input asp-for="ActivationDate" type="date" class="form-control" />
                    <span asp-validation-for="ActivationDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ExpirationDate" class="form-label"></label>
                    <input asp-for="ExpirationDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RealizationDate" class="form-label"></label>
                    <input asp-for="RealizationDate" type="date" class="form-control" />
                    <span asp-validation-for="RealizationDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Resort" class="form-label"></label>
                    <input asp-for="Resort" class="form-control" placeholder="Np. Mazury" />
                    <span asp-validation-for="Resort" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <select asp-for="Status" asp-items="@Model.StatusList" class="form-select"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="InovoiceNumber" class="form-label"></label>
                    <input asp-for="InovoiceNumber" class="form-control" placeholder="Numer faktury" />
                    <span asp-validation-for="InovoiceNumber" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Zapisz</button>
                </div>
            </form>

            <div class="mt-3">
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-serialNumber="@Model.SerialNumber">
                    <i class="bi bi-arrow-left"></i> Wróć
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
