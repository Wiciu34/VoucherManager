

@{
    ViewData["Title"] = "Index";
}

<h1>Vouchery</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="VoucherTable" class="table">
    <thead>
        <tr>
            <th>
                Nr Seryjny
            </th>
            <th>
                Kwota
            </th>
            <th>
                Data Sprzedaży
            </th>
            <th>
                Data Ważności
            </th>
            <th>
                Ośrodek
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="modal fade" id="activationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="activationForm">
                    <div class="mb-3">
                        <label for="invoiceNumber" class="form-label">Numer faktury</label>
                        <input type="text" class="form-control" id="invoiceNumber" name="serialNumber" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Numer Telefonu</label>
                        <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                <button type="submit" class="btn btn-primary">Aktywuj</button>
            </div>
        </div>
    </div>
</div>
